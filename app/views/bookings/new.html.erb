
<div class="center">


    <%= form_for(@booking) do |f| %>
        <p><%= f.label :date %></p>
        <p><%= f.datetime_field :date %></p>
    
        <p><%= f.label :barber %></p>
        <p><%= f.collection_select :barber_id, Barber.all, :id, :name %></p>
    
        <p><%= f.hidden_field :user_id, value: session[:user_id] %></p>
    
        <p><%= f.submit %> </p>
    
    <% end %>

    
    <% if @booking.errors.any? %>
        <div id="error_explanation">
        <p><%= pluralize(@booking.errors.count, "error") %> prohibited this from being saved:</p>
        <ul>
        <% @booking.errors.full_messages.each do |msg| %>
            <li style="color: #000000" ><%= msg %></li>
        <% end %>
        </ul>
        </div>
    <% end %>
</div>