<div class="center">
<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :phone %>
    <%= f.telephone_field :phone %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit %>

<% end %>
</div>